---
import { navItems } from '../../data/navItems';
import Navbar from './navbar';

interface Props {
  currentPage?: string;
}

const { currentPage = navItems[0].name } = Astro.props;
---

<header class="header">
  <div class="header-container container">
    <div>
      <img
        src="https://demo.goodlayers.com/greennature/wp-content/themes/greennature/images/logo.png"
        alt=""
        width="190"
        class="py-5"
      />
    </div>

    <div class="flex-1"></div>

    <div class="navbar-wrapper">
      <Navbar client:load currentPage={currentPage} />
    </div>
  </div>
</header>

<style>
  .header {
    background-color: rgba(37, 53, 38, 0.85);
    position: fixed;
    width: 100%;
    color: #fff;
    z-index: 1000;
  }

  .header-container {
    display: flex;
    align-items: center;
    flex-direction: column;
  }

  @media screen and (min-width: 1048px) {
    .header-container {
      flex-direction: row;
      gap: 2rem;
    }
  }

  .navbar-wrapper {
    display: none;
  }

  @media screen and (min-width: 768px) {
    .navbar-wrapper {
      display: block;
    }
  }
</style>
